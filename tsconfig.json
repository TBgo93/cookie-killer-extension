{
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    //"types": ["**/*"],
    "rewriteRelativeImportExtensions": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": true,
  }
}
